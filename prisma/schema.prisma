generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  username      String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  wallets       Wallet[]
  transactions  Transaction[]
  trades        Trade[]
  tradingBots   TradingBot[]
}

model Wallet {
  id            String    @id @default(uuid())
  userId        String
  currency      String    // BTC, ETH, USDT, etc.
  balance       Float     @default(0)
  lockedBalance Float     @default(0) // For pending trades
  address       String?   // Crypto wallet address from Cryptomus
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id])

  @@unique([userId, currency])
}

model Transaction {
  id              String    @id @default(uuid())
  userId          String
  type            String    // DEPOSIT, WITHDRAWAL
  currency        String
  amount          Float
  fee             Float     @default(0) // Platform fee (1%)
  cryptomusFee    Float     @default(0) // Cryptomus network fee
  status          String    @default("PENDING") // PENDING, COMPLETED, FAILED
  cryptomusId     String?   // Cryptomus transaction ID
  txHash          String?   // Blockchain transaction hash
  walletAddress   String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
}

model Trade {
  id            String    @id @default(uuid())
  userId        String
  pair          String    // BTC/USDT, ETH/USDT, etc.
  type          String    // BUY, SELL
  orderType     String    // MARKET, LIMIT
  amount        Float
  price         Float
  total         Float
  fee           Float     @default(0)
  status        String    @default("PENDING") // PENDING, FILLED, CANCELLED
  filledAt      DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id])
}

model PlatformSettings {
  id              String    @id @default("settings")
  depositFee      Float     @default(0.01) // 1% deposit fee
  withdrawalFee   Float     @default(0.005) // 0.5% withdrawal fee
  tradingFee      Float     @default(0.001) // 0.1% trading fee
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model TradingBot {
  id              String    @id @default(uuid())
  userId          String
  pair            String    // BTC/USDT, ETH/USDT, etc.
  strategy        String    // DCA, GRID, SCALPER
  enabled         Boolean   @default(false)
  investment      Float     @default(10) // Amount per trade in USDT
  interval        Int       @default(60) // Minutes between trades

  // Strategy-specific settings (stored as JSON string)
  settings        String    @default("{}")

  // Bot state
  totalInvested   Float     @default(0)
  totalProfit     Float     @default(0)
  tradesCount     Int       @default(0)
  avgEntryPrice   Float     @default(0)
  holdings        Float     @default(0) // Current crypto holdings

  lastTradeAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
  botTrades       BotTrade[]

  @@unique([userId, pair, strategy])
}

model BotTrade {
  id            String    @id @default(uuid())
  botId         String
  type          String    // BUY, SELL
  amount        Float
  price         Float
  total         Float
  fee           Float     @default(0)
  profit        Float     @default(0) // Profit/loss for this trade
  reason        String    // Why the bot made this trade
  createdAt     DateTime  @default(now())

  bot           TradingBot @relation(fields: [botId], references: [id])
}
